<div class="container p-5">
  <div class="row">
    <div class="col-md-8">
      <h2>新規会員登録</h2>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="form-group">
          <label>名前</label>
          (姓)<%= f.text_field :first_name %>
          (名)<%= f.text_field :last_name %>
        </div>
        
        <div class="form-group">
          <label>フリガナ</label>
          (セイ)<%= f.text_field :first_name_kana %>
          (カナ)<%= f.text_field :last_name_kana %>
        </div>
      
        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="form-group">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>
        
        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>
        
        <div class="form-group">
          <label>電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone_number %>
        </div>
      
        <div class="form-group">
          <label>パスワード(6文字以上)</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="form-group">
          <label>パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= render "public/shared/links" %>
      
      <h2>既に登録済みの方</h2>
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>
  </div>
</div>