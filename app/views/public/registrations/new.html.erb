<div class="container">
  <div class="row">
    <div class="col-md-3 mb-4">
      <h4><i class="fa-solid fa-user-pen"></i>新規会員登録</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th>名前</th>
                <td>(姓)</td>
                <td><%= f.text_field :last_name, class: 'mr-3' %>(名)<%= f.text_field :first_name, class: 'ml-4' %></td>
              </tr>
              <tr>
                <th>フリガナ</th>
                <td>(セイ)</td>
                <td><%= f.text_field :last_name_kana, class: 'mr-3' %>(メイ)<%= f.text_field :first_name_kana, class: 'ml-2' %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td></td>
                <td><%= f.email_field :email %></td>
              </tr>
              <tr>
                <th>郵便番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td></td>
                <td><%= f.text_field :address, size: 50  %></td>
              </tr>
              <tr>
                <th>電話番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :telephone_number %></td>
              </tr>
              <tr>
                <th>パスワード(6文字以上)</th>
                <td></td>
                <td><%= f.password_field :password %></td>
              </tr>
              <tr>
                <th>パスワード(確認用)</th>
                <td></td>
                <td><%= f.password_field :password_confimation %></td>
              </tr>
                <td></td>
                <td></td>
                <td><%= f.submit "新規登録", class: 'btn btn-success pl-5 pr-5 pt-2 pb-2' %></td>
            </tbody>
          </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 mb-5">
      <h4><i class="fa-solid fa-user-check"></i>既に登録済みの方</h4>
      <p><%= link_to "こちら", new_customer_session_path, class: 'ml-5' %>からログインしてください。</p>
    </div>
  </div>
</div>