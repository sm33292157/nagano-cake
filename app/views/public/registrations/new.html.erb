<div class="container p-5">
  <div class="row">
    <div class="col-md-8">
      <h2>新規会員登録</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th>名前</th>
                <td>(姓)</td>
                <td><%= f.text_field :last_name, class: 'form-control' %></td>
                <td>(名)</td>
                <td><%= f.text_field :first_name, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>フリガナ</th>
                <td>(セイ)</td>
                <td><%= f.text_field :last_name_kana, class: 'form-control' %></td>
                <td>(メイ)</td>
                <td><%= f.text_field :first_name_kana, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td></td>
                <td><%= f.email_field :email, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>郵便番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :postal_code, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td></td>
                <td><%= f.text_field :address, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>電話番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :telephone_number, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>パスワード(6文字以上)</th>
                <td></td>
                <td><%= f.password_field :password, class: 'form-control' %></td>
              </tr>
              <tr>
                <th>パスワード(確認用)</th>
                <td></td>
                <td><%= f.password_field :password_confimation, class: 'form-control' %></td>
              </tr>
                <td></td>
                <td></td>
                <td class="text-center"><%= f.submit "新規登録", class: 'btn btn-success' %></td>
            </tbody>
          </table>
        </div>
      <% end %>
      <h2>既に登録済みの方</h2>
      <%= link_to "こちら", new_customer_session_path, class: 'login-link' %> からログインしてください。
    </div>
  </div>
</div>