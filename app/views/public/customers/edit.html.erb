<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4>会員情報編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @customer, method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: 'mr-3' %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class: 'mr-3' %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: 50 %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
            <td><%= f.submit "退会する", class: 'btn btn-danger' %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>