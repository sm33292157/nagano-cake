<div class="container">
  <div class="row">
    <div class="col-md-2 offset-1 text-center mb-4">
      <h4 class="text-secondary bg-warning rounded-pill">マイページ</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5>登録情報</h5>
    </div>
      <%= link_to "編集する", customers_infomation_edit_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-bordered mt-3 mb-4">
        <tbody>
          <tr>
            <td class="table-active">氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-active">カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="table-active">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="table-active">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table-active">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="table-active">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5>配送先</h5>
    </div>
      <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary mb-3" %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5>注文履歴</h5>
    </div>
       <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>