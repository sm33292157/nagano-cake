<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>注文情報確認</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(80, 80) %>
              <strong><%= cart_item.item.name %></strong>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total = @total + cart_item.subtotal %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active">送料</td>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <td class="table-active">商品合計</td>
            <td></td>
          </tr>
          <tr>
            <td class="table-active">請求金額</td>
            <td><%= @total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-1">
      <p><strong>支払方法</strong></p>
    </div>
    <div class="col-md-4">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1">
      <p><strong>お届け先</strong></p>
    </div>
    <div class="col-md-10">
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </div>
  </div>
  <div class="text-center mt-5">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_fee %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :order_status %>
      <%= f.submit "注文を確定する", class: 'btn btn-success shodow-sm' %>
    <% end %>
  </div>
</div>