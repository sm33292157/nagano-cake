<div class="container">
  <div class="row">
    <div class="col-md-12 mb-5">
      <h4>配送先登録/一覧</h4>
    </div>
    <div class="row">
      <div class="col-md-12">
      <%= render "shipping_address_create", shipping_address: @shipping_address %>
      </div>
    </div>
    
    <div class="col-md-10">
      <% @shipping_addresses.each do |address| %>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_shipping_address_path(address), class: 'btn btn-success mr-2' %>
              <%= link_to "削除する", shipping_address_path(address), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>