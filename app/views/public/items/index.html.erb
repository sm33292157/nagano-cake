<div class="container">
  <div class="row">
    <div class="ml-3 col-md-2">
      <%= render 'public/genres/genre' %>
    </div>
    <div class="col-md-9">
      <h4 class="mb-3"><strong>商品一覧</strong></h4>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col-md-3">
          <%= image_tag item.get_image(200, 150) %>
          <%= link_to item_path(item.id), class: 'text-dark' do %>
            <p><strong><%= item.name %></strong></p>
          <% end %>
          <p>¥<%= item.price %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row", style="text-align: center;">
    <div class="col-6 offset-5 mb-5">
    <%= paginate @items %>
    </div>
  </div>
</div>