<div class="container pt-3 mb-5 pb-5">
  <div class="row">
    <div class="ml-3 col-md-2">
      <%= render 'public/genres/genre' %>
    </div>
    <div class="col-md-3">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-md-6 ml-5">
      <h4><strong><%= @item.name %></strong></h4>
      <p><%= @item.introduction %></p>
      <h4>
        ¥ <%= @item.with_tax_price %>
        <span style="font-size:10px;">(税込)</span>
      </h4>
      <div class="form-group mt-5">
      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit "カートに入れる", class: 'btn btn-success ml-5' %>
      <% end %>
      </div>
    </div>
  </div>
</div>