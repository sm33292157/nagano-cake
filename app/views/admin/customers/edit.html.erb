<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h4>
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
      </h4>
    <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="2"><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, "true" %>
              <%= f.label :is_active, "有効", class: 'text-black-50 mr-3' %>
              <%= f.radio_button :is_active, "false" %>
              <%= f.label :is_active, "退会", class: 'text-black-50' %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div class="action">
                <%= f.submit "変更を保存", class: 'btn btn-success pt-2 pb-2 pl-4 pr-4' %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</div>