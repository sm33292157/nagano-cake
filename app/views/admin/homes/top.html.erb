<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-10">
      <% @orders.each do |order| %>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.last_name %><%= order.first_name %></td>
            <td><%= order.amount %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
