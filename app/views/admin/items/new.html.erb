<div class="container">
  <div class="row">
    <div class="offset-1 col-md-7">
      <h4>商品新規登録</h4>
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name, class: 'form-control', :placeholder => "商品名" %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction, class: 'form-control', :placeholder => "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--" %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.number_field :price, class: 'form-control', :placeholder => "1000" %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td></td>
          </tr>
        </tbody>
      </table>
        <div class="text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>