<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h4>商品一覧</h4>
      <div class="d-flex justify-content-end">
      <%= link_to new_admin_item_path, class: 'btn btn-warning rounded-circle p-0 shadow-sm', style: 'width: 2rem; height: 2rem;' do %>
        ＋
      <% end %>
      </div
    </div>
    <div class="col-md-10 offset-md-1">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>