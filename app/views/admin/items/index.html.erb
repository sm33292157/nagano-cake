<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>商品一覧</h4>
      <div class="d-flex justify-content-end mb-3">
      <%= link_to new_admin_item_path, class: 'btn btn-warning rounded-circle p-0 shadow-sm', style: 'width: 2rem; height: 2rem;' do %>
        ＋
      <% end %>
      </div>
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <td>
              <%= link_to admin_item_path(item.id), class: 'text-dark' do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
              <td class="text-success"><strong>販売中</strong></td>
            <% else %>
              <td class="text-dark-50"><strong>販売停止中</strong></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>