<div class="contanir">
  <div class="row">
    <div class="offset-1 col-md-7">
      <h4 class="mb-5">ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name, class: 'form-control' %></td>
            <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="offset-1 col-md-5">
      <table>
        <thead class="thead-light">
          <th>ジャンル名</th>
        </thead>
        <tbody>
          <%= @genres.each do |genre| %>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>