<div class="container">
  <div class="row">
    <div class="offset-1">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="borderless">
        <tbody>
          <tr>
            <td><strong>購入者</strong></td>
            <td><%= @order.last_name %> <%= @order.first_name %></td>
          </tr>
          <tr>
            <td><strong>注文日</strong></td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td><strong>配送先</strong></td>
            <td></td>
          </tr>
          <tr>
            <td><strong>支払方法</strong></td>
            <td></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% @items.each do |item| %>
      <table class="table border-top">
        <thead class="thead-light">
          <tr>
            <th><strong>商品名</strong></th>
            <th><strong>単価(税込)</strong></th>
            <th><strong>数量</strong></th>
            <th><strong>小計</strong></th>
            <th><strong>製作ステータス</strong></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.amount %></td>
            <td><%= item. %></td>
            <td><%= item.maiking_status %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
    <div class="col-md-4">
      
    </div>
  </div>
</div>