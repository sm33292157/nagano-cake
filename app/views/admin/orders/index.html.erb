<div class="container">
  <div class="row">
    <div class="col-md-3 offset-1 mb-3">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-1">
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th><strong>購入日時</strong></th>
            <th><strong>購入者</strong></th>
            <th><strong>注文個数</strong></th>
            <th><strong>注文ステータス</strong></th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id), class: 'text-dark' do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="row", style="text-align: center;">
        <div class="col-6 offset-5">
        <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>